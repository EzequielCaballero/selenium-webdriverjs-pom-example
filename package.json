{
    "name": "selenium-webdriverjs-mocha-chai-typescript-babel-prototype",
    "version": "0.0.1",
    "description": "Test built as an example using WebdriverJS (selenium) + Mocha + Chai and Typescript, following POM pattern (based on OOP paradigm)",
    "main": "./src/test.ts",
    "scripts": {
        "test": "mocha --require @babel/register -r ts-node/register --recursive --timeout 10000 src/test.ts",
        "build": "npx babel ./src --out-dir lib --extensions '.ts'",
        "tsc": "tsc"
    },
    "author": "EAC",
    "license": "MIT",
    "dependencies": {
        "@types/chai": "^4.1.7",
        "@types/mocha": "^5.2.7",
        "@types/node": "^12.0.10",
        "@types/selenium-webdriver": "^4.0.0",
        "chai": "^4.2.0",
        "mocha": "^6.1.4",
        "screenshot-desktop": "^1.8.0",
        "selenium-webdriver": "^4.0.0-alpha.4",
        "typescript": "^3.5.2"
    },
    "devDependencies": {
        "@babel/core": "^7.4.5",
        "@babel/register": "^7.4.4",
        "ts-node": "^8.3.0"
    }
}